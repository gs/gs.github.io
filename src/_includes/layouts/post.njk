{% extends "layouts/base.njk" %}
{% block content %}
<main class="container py-5" style="padding-top: 6rem !important;">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Main Page</a></li>
          <li class="breadcrumb-item"><a href="/blog" class="text-decoration-none">Blog</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
        </ol>
      </nav>
      
      <article class="bg-white p-4 p-md-5 shadow-sm rounded">
        <!-- Article Header -->
        <header class="mb-4">
          <div class="d-flex align-items-center mb-3">
            <span class="badge bg-dark me-2">Development</span>
            <span class="text-muted">{{ date | date_ymd }}</span>
          </div>
          <h1 class="fw-bold mb-3">{{ title }}</h1>
          <div class="d-flex align-items-center mb-4">
            <img src="/images/gs.png" alt="Grzegorz Smajdor" class="rounded-circle me-2" width="40" height="40">
            <div>
              <p class="mb-0">Grzegorz Smajdor</p>
              <p class="text-muted small mb-0">Software Engineer & CTO</p>
            </div>
          </div>
        </header>
        
        <!-- Article Content -->
        <div class="article-content">
          {{ content | safe }}
        </div>
        
        <!-- Article Footer -->
        <footer class="mt-5 pt-4 border-top">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5>Share this article</h5>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-sm btn-outline-dark"><i class="bi bi-twitter"></i> Twitter</a>
                <a href="#" class="btn btn-sm btn-outline-dark"><i class="bi bi-linkedin"></i> LinkedIn</a>
              </div>
            </div>
            <a href="/blog" class="btn btn-dark">Back to Blog</a>
          </div>
          
          <!-- Related Posts -->
          <div class="mt-5">
            <h4 class="mb-4">You might also enjoy</h4>
            <div class="row g-4">
              <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                  <div class="card-body">
                    <h5 class="card-title">Rails 7 with Bootstrap CSS</h5>
                    <p class="card-text text-muted">Learn how to integrate Bootstrap with Rails 7 using the new asset pipeline.</p>
                  </div>
                  <div class="card-footer bg-transparent border-0">
                    <a href="/blog/rails-7-with-bootstrap-css" class="btn btn-link text-dark p-0">Read Article <i class="bi bi-arrow-right"></i></a>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                  <div class="card-body">
                    <h5 class="card-title">Hot Reload with Ruby on Rails 7</h5>
                    <p class="card-text text-muted">Set up hot reloading in your Rails 7 application for a better development experience.</p>
                  </div>
                  <div class="card-footer bg-transparent border-0">
                    <a href="/blog/hotreload-with-ruby-on-rails-7" class="btn btn-link text-dark p-0">Read Article <i class="bi bi-arrow-right"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </footer>
      </article>
    </div>
  </div>
</main>

<style>
  .article-content {
    line-height: 1.8;
    font-size: 1.1rem;
  }
  
  .article-content h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }
  
  .article-content h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }
  
  .article-content p {
    margin-bottom: 1.25rem;
  }
  
  .article-content ul, .article-content ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  
  .article-content li {
    margin-bottom: 0.5rem;
  }
  
  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.375rem;
    margin: 1.5rem 0;
  }
  
  .article-content pre {
    margin: 1.5rem 0;
  }
</style>
{% endblock %}
